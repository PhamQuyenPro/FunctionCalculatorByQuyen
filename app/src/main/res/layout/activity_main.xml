<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical">

    <LinearLayout
        android:layout_weight="4"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        >

        <TextView
            android:id="@+id/tv_result"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:gravity="bottom|right"
            android:textSize="50dp"/>

        <EditText
            android:id="@+id/edit_input"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:gravity="bottom|right"
            android:textSize="40dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_weight="6"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_CE"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="CE"
                android:textSize="30dp"
                android:background="#BBBBBB"
                android:layout_margin="3dp"/>

            <Button
                android:id="@+id/btn_C"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="C"
                android:textSize="30dp"
                android:background="#BBBBBB"
                android:layout_margin="3dp"/>

            <Button
                android:id="@+id/btn_BS"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="BS"
                android:textSize="30dp"
                android:background="#BBBBBB"
                android:layout_margin="3dp"/>

            <Button
                android:id="@+id/btn_Chia"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="/"
                android:textSize="30dp"
                android:background="#BBBBBB"
                android:layout_margin="3dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_number7"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="7"
                android:textSize="30dp"
                android:layout_margin="3dp"
                android:background="#DDDDDD"/>

            <Button
                android:id="@+id/btn_number8"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="8"
                android:textSize="30dp"
                android:layout_margin="3dp"
                android:background="#DDDDDD"/>

            <Button
                android:id="@+id/btn_number9"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="9"
                android:textSize="30dp"
                android:layout_margin="3dp"
                android:background="#DDDDDD"/>

            <Button
                android:id="@+id/btn_Nhan"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="x"
                android:textSize="30dp"
                android:background="#BBBBBB"
                android:layout_margin="3dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_number4"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="4"
                android:textSize="30dp"
                android:layout_margin="3dp"
                android:background="#DDDDDD"/>

            <Button
                android:id="@+id/btn_number5"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="5"
                android:textSize="30dp"
                android:layout_margin="3dp"
                android:background="#DDDDDD"/>

            <Button
                android:id="@+id/btn_number6"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="6"
                android:textSize="30dp"
                android:layout_margin="3dp"
                android:background="#DDDDDD"/>

            <Button
                android:id="@+id/btn_Tru"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="-"
                android:textSize="30dp"
                android:background="#BBBBBB"
                android:layout_margin="3dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_number1"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="1"
                android:textSize="30dp"
                android:layout_margin="3dp"
                android:background="#DDDDDD"/>

            <Button
                android:id="@+id/btn_number2"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="2"
                android:textSize="30dp"
                android:layout_margin="3dp"
                android:background="#DDDDDD"/>

            <Button
                android:id="@+id/btn_number3"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="3"
                android:textSize="30dp"
                android:layout_margin="3dp"
                android:background="#DDDDDD"/>

            <Button
                android:id="@+id/btn_Cong"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="+"
                android:textSize="30dp"
                android:background="#BBBBBB"
                android:layout_margin="3dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_AmDuong"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="+/-"
                android:textSize="30dp"
                android:background="#BBBBBB"
                android:layout_margin="3dp"/>

            <Button
                android:id="@+id/btn_number0"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="0"
                android:textSize="30dp"
                android:layout_margin="3dp"
                android:background="#DDDDDD"/>

            <Button
                android:id="@+id/btn_Point"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="."
                android:textSize="30dp"
                android:background="#BBBBBB"
                android:layout_margin="3dp"/>

            <Button
                android:id="@+id/btn_Result"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="="
                android:textSize="30dp"
                android:background="#BBBBBB"
                android:layout_margin="3dp"/>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>